<% layout('/layouts/boilerplate.ejs') %>
<div class="row mt-4">
  <div class="col-6 offset-3">
    <h1>Sign Up on Wonderlast</h1>
    <form action="/signup" novalidate class="needs-validation" method="post">
      <div>
        <label for="email" class="form-label">Email : </label>
        <input
          type="email"
          name="email"
          id="email"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks Good!</div>
        <div class="invalid-feedback">Please enter valid email</div>
      </div>
      <div>
        <label for="username" class="form-label">User Name : </label>
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks Good!</div>
        <div class="invalid-feedback">Please enter valid user name</div>
      </div>
      <div>
        <label for="password" class="form-label">Password : </label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks Good!</div>
        <div class="invalid-feedback">Please enter valid password</div>
      </div>
      <button type="submit" class="btn btn-danger mt-3">Sign Up</button>
    </form>
  </div>
</div>
