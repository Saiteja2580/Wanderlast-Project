<% layout('./layouts/boilerplate') %>
<body>
  <div class="row">
    <div class="col-8 offset-2">
      <h3>Create a new listing :</h3>
      <form
        action="/listings"
        method="post"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            name="listing[title]"
            placeholder="Add a cathcy title"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks Good!</div>
          <div class="invalid-feedback">Please enter valid title</div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            placeholder="Enter Description"
            class="form-control"
            required
          ></textarea>
          <div class="valid-feedback">Looks Good!</div>
          <div class="invalid-feedback">Please enter valid description</div>
        </div>
        <!-- <div class="mb-3">
          <label for="Image URL" class="form-label">Image URL</label>
          <input
            type="text"
            name="listing[image]"
            placeholder="Enter URL of image"
            class="form-control"
          />
        </div> -->
        <div class="mb-3">
          <label for="Image URL" class="form-label"
            >Upload Listing Image :
          </label>
          <input
            type="file"
            name="listing[image]"
            placeholder="Enter URL of image"
            class="form-control"
            required
          />
        </div>
        <div class="mb-3">
          <label for="price" class="form-label">Price</label>
          <input
            type="text"
            name="listing[price]"
            placeholder="1200"
            class="form-control"
            required
          />
          <div class="valid-feedback">Looks Good!</div>
          <div class="invalid-feedback">Please enter valid price</div>
        </div>
        <div class="row">
          <div class="mb-3 col-md">
            <label for="location" class="form-label">Location</label>
            <input
              type="text"
              name="listing[location]"
              placeholder="jaipur,Rajasthan"
              class="form-control"
              required
            />
            <div class="valid-feedback">Looks Good!</div>
            <div class="invalid-feedback">Please enter valid location</div>
          </div>
          <div class="mb-3 col-md">
            <label for="country" class="form-label">Country</label>
            <input
              type="text"
              name="listing[country]"
              placeholder="India"
              class="form-control"
              required
            />
            <div class="valid-feedback">Looks Good!</div>
            <div class="invalid-feedback">Please enter valid country</div>
          </div>
        </div>
        <button type="submit" class="btn btn-dark">Add</button>
      </form>
    </div>
  </div>
</body>
